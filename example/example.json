    },
    {
      "type": "separator"
    },
    {
      "type": "label",
      "label": "Item With No Action"
    },
    {
      "type": "label",
      "label": "Item With Action",
      "action": {
        "domain": "light",
        "service": "toggle",
        "serviceData": {
          "entity_id": "light.my_light"
        }
      }
    },
    {
      "type": "dropdown",
      "label": "Dropdown Menu",
      "items": [
        {
          "type": "label",
          "label": "Dropdown Item 1"
        },
        {
          "type": "label",
          "label": "Dropdown Item 2"
        },
        {
          "type": "label",
          "label": "Dropdown Item 3"
        },
        {
          "type": "separator"
        },
        {
          "type": "dropdown",
          "label": "Sub-Dropdown",
          "items": [
            {
              "type": "label",
              "label": "Sub-Dropdown Item"
            }
          ]
        }
      ]
    },
    {
      "type": "label",
      "label": "Reloading Item",
      "reload": true
    },
    {
      "type": "open_hass",
      "label": "Open Home Assistant"
    },
    {
      "type": "label",
      "label": "-- ICONS --"
    },
    {
      "type": "separator"
    }, 
    {
      "type": "label",
      "icon": "invalid",
      "label": "Invalid Icon"
    },
    {
      "type": "label",
      "icon": "homeTemplate@2x.png",
