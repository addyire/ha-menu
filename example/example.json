    {
      "type": "dropdown",
      "label": "Icon Template",
      "items": [
        {
          "type": "label",
          "label": "You may not see a difference"
        },
        {
          "type": "label",
          "label": "Non-Template",
          "icon": "card@2x.png"
        },
        {
          "type": "label",
          "label": "Template",
          "icon": "cardTemplate@2x.png"
        }
      ]
    },
    {
      "type": "label",
      "label": "-- TEMPLATES --"
    },
    {
      "type": "separator"
