        },
        {
          "type": "label",
          "icon": "magnifications/iconTemplate@1x.png",
          "label": "1x"
        },{
          "type": "label",
          "icon": "magnifications/iconTemplate@2x.png",
          "label": "2x"
        },{
          "type": "label",
          "icon": "magnifications/iconTemplate@3x.png",
          "label": "3x"
        },{
          "type": "label",
          "icon": "magnifications/iconTemplate@4x.png",
          "label": "4x"
        },{
          "type": "label",
          "icon": "magnifications/iconTemplate@5x.png",
          "label": "5x"
        }
